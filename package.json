{
  "name": "printbroker",
  "version": "1.0.0",
  "description": "Print Broker - Baskı hizmetleri için aracı platform",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "build": "rimraf dist && tsc",
    "build:server": "rimraf dist/server && tsc -p tsconfig.server.json",
    "build:client": "rimraf dist/client && tsc -p tsconfig.client.json",
    "clean": "rimraf dist",
    "db:push": "drizzle-kit push:pg"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.29.3",
    "express": "^4.18.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.24",
    "@types/pg": "^8.11.2",
    "drizzle-kit": "^0.20.14",
    "nodemon": "^3.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  }
}
