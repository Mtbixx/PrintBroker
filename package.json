{
  "name": "printbroker",
  "version": "1.0.0",
  "description": "Print Broker - Baskı hizmetleri için aracı platform",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start": "node server/index.js",
    "db:push": "drizzle-kit push:pg",
    "build:frontend": "vite build",
    "build:backend": "tsc -p tsconfig.server.json",
    "push:frontend": "git add . && git commit -m 'frontend: update' && git push origin main",
    "push:backend": "git add . && git commit -m 'backend: update' && git push origin main",
    "deploy:frontend": "npm run build:frontend && npm run push:frontend",
    "deploy:backend": "npm run build:backend && npm run push:backend"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@neondatabase/serverless": "^1.0.1",
    "@radix-ui/react-select": "^2.2.5",
    "@tanstack/react-query": "^5.24.1",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.29.3",
    "express": "^4.18.3",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.515.0",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.50.1",
    "tailwind-merge": "^3.3.1",
    "wouter": "^2.12.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.24",
    "@types/pg": "^8.11.2",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "drizzle-kit": "^0.31.1",
    "nodemon": "^3.1.0",
    "postcss": "^8.5.5",
    "rimraf": "^5.0.5",
    "tailwindcss": "^4.1.10",
    "typescript": "^5.3.3",
    "vite": "^6.3.5"
  }
}
